---
export interface Props {
	name: string;
	label: string;
	[key: string]: any;
}

const { name, label, ...inputProps } = Astro.props;
---

<div class="field mb-[30px] desktop:mb-[40px]">
	<label for={name} class="label text-[16px] mobile:text-[20px] tablet:text-[24px]">{label}</label>
	<input class="input h-[40px] text-[16px] mobile:text-[20px] tablet:text-[24px] desktop:h-[50px]" {...inputProps} />
</div>

<style>
	.field {
		/* margin-bottom: 40px; */
		.label {
			/* font-size: 24px; */
            font-weight:600;
			margin-bottom: 10px;
			display: block;
			width: 100%;
		}

		.input {
			display: block;
			/* height: 50px; */
			width: 100%;
            /* background-color:var(--normal-text); */
            background-color: #fff;
            color:var(--main-text);
            font-weight:200;
            border:none;
            padding:0 10px;
            /* font-size: 24px; */

            &:focus-within {
                border:none;
                outline:none;
            }
		}
	}
</style>
