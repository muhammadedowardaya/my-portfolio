---
interface Props {
	title: string;
}

const { title } = Astro.props;

// import '../utils/changeActiveNavLink.js';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/my-portfolio/my-logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Concert+One&family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Pacifico&display=swap');
	/* font-family: "Inter", sans-serif; */
	/*  font-family: "Concert One", sans-serif; */
	/* font-family: "IBM Plex Mono", monospace; */
	/*  font-family: "Pacifico", cursive; */

	@font-face {
		font-family: 'BebasKai';
		src: url('../fonts/BebasKai.otf') format('opentype');
	}

	:root {
		--primary: #00adb5;
        --button-color:#006166;
		--secondary: #393e46;
		--accent: #ff5722;
		--background: #eeeeee;
		--main-text: #222831;
		--normal-text: #d1d5db;
		--social-media-item: #4e5560;

		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}

	html {
		font-family: 'Inter', sans-serif;
		background: #13151a;
        scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	body {
		position: relative;
	}
</style>

<script src="../utils/changeActiveNavLink.js"></script>