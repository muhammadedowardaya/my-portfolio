---
import About from '../components/organism/About.astro';
import Header from '../components/organism/Header.astro';
import Navbar from '../components/organism/Navbar.astro';
import Skills from '../components/organism/Skills.astro';
import Certificates from '../components/organism/Certificates.astro';
import Contact from '../components/organism/Contact.astro';
import Layout from '../layouts/Layout.astro';

import { skills } from '../data/skills.js';
import { certificates } from '../data/certificates';
import Projects from '../components/organism/Projects.astro';
import { projects } from '../data/projects';
import Footer from '../components/organism/Footer.astro';

const links = [
	{
		title: 'About',
		href: '#about',
	},
	{
		title: 'Skills',
		href: '#skills',
	},
	{
		title: 'Certificates',
		href: '#certificates',
	},
	{
		title: 'Projects',
		href: '#projects',
	},
	{
		title: 'Contact',
		href: '#contact',
	},
];
---

<Layout title="My Portfolio">
	<Navbar links={links} />
    <Header />
	<About />
	<Skills skills={skills} />
	<Certificates certificates={certificates} />
    <Projects projects={projects} />
    <Contact />
    <Footer />
</Layout>

<style>
	main {
		color: #fff;
	}
</style>
